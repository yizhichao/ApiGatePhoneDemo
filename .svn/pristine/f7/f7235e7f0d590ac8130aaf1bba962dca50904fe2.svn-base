<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_queryType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:hint="queryType"
            android:textSize="16sp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:background="#000"
            android:gravity="center"/>
        <EditText
            android:id="@+id/tv_recordPos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:hint="recordPos"
            android:textSize="16sp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:background="#000"
            android:gravity="center"/>
        <EditText
            android:id="@+id/tv_bCascade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:hint="bCascade"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_setting"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/beginTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:hint="开始时间"
            android:textSize="16sp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:background="#000"
            android:gravity="center"/>
        <EditText
            android:id="@+id/endTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:hint="结束时间"
            android:textSize="16sp"/>
    </LinearLayout>
    <Button
        android:id="@+id/searchBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_time"
        android:text="查询录像"/>
    <ListView
        android:id="@+id/lv_recording"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchBtn"
        android:layout_weight="1"
        android:listSelector="#00000000"
        android:dividerHeight="5dp"
        android:divider="@null"/>

</RelativeLayout>